<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Workset" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock Text="Select a user-created workset:" Margin="0,0,0,6" FontWeight="Bold"/>
            <!-- Added filter controls -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBox x:Name="txtFilter" Width="250" Height="22" VerticalAlignment="Center"
                         ToolTip="Type to filter workset names (case-insensitive)"/>
                <Button x:Name="btnClear" Width="60" Height="22" Margin="8,0,0,0">Clear</Button>
            </StackPanel>
        </StackPanel>

        <ListBox x:Name="lbWorksets" Grid.Row="1" MinHeight="200" SelectionMode="Multiple" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="btnHide" Width="75" Margin="0,0,8,0">Hide</Button>
            <Button x:Name="btnShow" Width="75" Margin="0,0,8,0">Show</Button>
            <Button x:Name="btnCancel" Width="75">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
